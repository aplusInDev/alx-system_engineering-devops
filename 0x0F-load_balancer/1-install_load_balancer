#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.

sudo apt-get -y update
sudo apt-get -y install haproxy

lines="\nfrontend http\n\tbind *:80\n\tmode http\n\n\tdefault_backend web-backend\n\nbackend web-backend\n\tbalance roundrobin\n\tserver 372657-web-01 54.146.86.128:80 check\n\tserver 372657-web-02 18.209.178.7:80 check\ndefaults"

sudo sed -i -e "s|defaults|$lines|" /etc/haproxy/haproxy.cfg

sudo service haproxy restart
